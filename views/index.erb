<h1> Total spend to date: </h1>
<h1 class="total_spend"> <%= @total_spend %> </h1>
<div class="button_fund_breakdown">
  <form method="get" action="/bonzabudgeting/spendbytag">
  <input type="submit" value = "View breakdown by tag"/>
  </form> </div>

<h3> Transactions </h3>

<table>
  <tr>
    <th>Merchant</th>
    <th>Tag</th>
    <th>Spend</th>
  </tr>
  <% @transactions.each() do |transaction| %>
  <tr>
    <td><%= transaction.merchant_name() %></td>
    <td><%= transaction.tag_name() %></td>
    <td><%= transaction.amount() %></td>
   </tr>
  <% end %>
   <tr>
     <td></td>
     <td></td>
     <td><b><%= @total_spend %></b></td>
   </tr>

</table>
