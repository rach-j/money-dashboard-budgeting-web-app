<div class="contents">
  <h1> My budget: </h1>
  <h1 class="big_numbers"> <%= "£#{@budget_value}" %></h1>
    <div class="button">
      <a href="/bonzabudgeting/budget/<%= @budget.id() %>/budgetupdate"> Update budget </a>
    </div>

  <h1> Total spend to date: </h1>
  <h1 class="big_numbers"> <%= "£#{@total_spend}" %> </h1>
  <div class="button_box">
    <div class="button">
      <a href="/bonzabudgeting/spendbytag"> View breakdown by tag </a>
    </div>
    <div class="button">
      <a href="/bonzabudgeting/spendbymerchant"> View breakdown by merchant </a>
    </div>
  </div>
