<div class="contents">

  <h1> My budget for the year: </h1>
  <h1 class="big_numbers"> <%= @budget_value %></h1>

  <div class="button">
    <a href="/bonzabudgeting/budget/<%= @budget.id() %>/budgetupdate"> Update budget </a>
  </div>

  <h1> Total spend to date: </h1>
  <h1 class="big_numbers"> <%= @total_spend %> </h1>

  <div class="budget_message">
    <h2> <%= @budget_message %> </h2>
  </div>

  <div class="table_group">
    <h3> Transactions </h3>

    <table>
      <tr>
        <th>Date</th>
        <th>Merchant</th>
        <th>Tag</th>
        <th>Spend</th>
      </tr>

      <% @transactions.each() do |transaction| %>
      <tr>
        <td> <%= convert_to_UK_date(transaction.transaction_date()) %></td>
        <td><%= transaction.merchant_name() %></td>
        <td><%= transaction.tag_name() %></td>
        <td><%= transaction.amount_to_display() %></td>
        <td class="no_border">
          <div class="button">
            <a href="/bonzabudgeting/<%= transaction.id() %>/edit"> Edit </a>
          </div>
        </td>
        <td class="no_border">
          <form method="post" action="/bonzabudgeting/<%= transaction.id() %>/delete">
            <input type="submit" value = "Delete"/>
          </form>
        </td>
      </tr>
      <% end %>

      <tr>
        <td class="no_border"></td>
        <td class="no_border"></td>
        <td class="no_border"></td>
        <td class="no_border"><b><%= @total_spend %></b></td>
      </tr>
    </table>

  </div>

</div>
