<div class="budget_message">
  <h2> <%= @budget_message %> </h2>
</div>
<div class="table_group">
  <h3> Transactions </h3>

  <table>
    <tr>
      <th>Merchant</th>
      <th>Tag</th>
      <th>Spend</th>
    </tr>
    <% @transactions.each() do |transaction| %>
    <tr>
      <td><%= transaction.merchant_name() %></td>
      <td><%= transaction.tag_name() %></td>
      <td><%= "£#{'%.2f' % transaction.amount()}" %></td>
      <td class="no_border">
        <div class="button">
          <a href="/bonzabudgeting/<%= transaction.id() %>/edit"> Edit </a>
         </div>
        <!-- <form method="get" action="/bonzabudgeting/<%= transaction.id() %>/edit">
          <input type="submit" value = "Edit"/>
        </form> -->
      </td>
      <td class="no_border">
        <form method="post" action="/bonzabudgeting/<%= transaction.id() %>/delete">
          <input type="submit" value = "Delete"/>
        </form>
      </td>
    </tr>
    <% end %>
    <tr>
      <td class="no_border"></td>
      <td class="no_border"></td>
      <td class="no_border"><b><%= "£#{@total_spend}" %></b></td>
    </tr>
  </table>
</div>
</div>
