<div class="contents">

  <h1> Total spend to date: </h1>
  <h1 class="big_numbers"> <%= @total_spend %> </h1>

  <div class="table_group">

    <h3> Split by tag </h3>

    <table>
      <tr>
        <th> Tag </th>
        <th> Spend </th>
      </tr>

      <% @tags.each() do |tag| %>
      <tr>
        <td><%= tag.name() %></td>
        <td><%= add_currency_sign(tag.total_spend()) %></td>
        <td class="no_border">
          <div class="button">
            <a href="/bonzabudgeting/spendbytag/<%= tag.id() %>"> View transactions </a>
          </div>
        </td>
      </tr>
      <% end %>

      <tr >
        <td class="no_border"></td>
        <td class="no_border"><b><%= @total_spend %></b></td>
      </tr>
    </table>

  </div>

</div>
