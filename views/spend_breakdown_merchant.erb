<div class="contents">

  <h1> Total spend to date: </h1>
  <h1 class="big_numbers"> <%= "£#{@total_spend}" %> </h1>

  <div class="table_group">

    <h3> Split by merchant </h3>

    <table>
      <tr>
        <th> Merchant </th>
        <th> Spend </th>
      </tr>

      <% @merchants.each() do |merchant| %>
      <tr>
        <td><%= merchant.name() %></td>
        <td><%= "£#{'%.2f' % merchant.total_spend()}" %></td>
        <td class="no_border">
          <div class="button">
            <a href="/bonzabudgeting/spendbymerchant/<%= merchant.id() %>"> View transactions </a>
          </div>
        </td>
      </tr>
      <% end %>

      <tr >
        <td class="no_border"></td>
        <td class="no_border"><b><%= "£#{@total_spend}" %></b></td>
      </tr>
    </table>

  </div>

</div>
